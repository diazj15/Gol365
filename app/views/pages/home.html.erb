						<div class="news-title-small"><%= link_to news.title, news_path(news, :championship => params[:championship]) %></div>
						<div>
							<% begin %>
								<% if news.image_link_small.nil? || news.image_link_small.empty? %>
									<%= image_tag news.image.url(:medium), class: "img-responsive image-center" %>
								<% elsif %> 
									<%= news.image_link_small.html_safe %>										
								<% end %>
							<% rescue Exception %>
							<% end %>
						</div>
						<div class="content-text"><%= simple_format(news.summary) %></div>
						<div><hr></div>
					</div>
				<% end %>
			<% end %>
			

			<% if @news_know_better_to %>
				<% @news_know_better_to.each do |news|  %>
					<div class="col-md-12 section-header-blue">Conozca mejor a</div>
					<div class="col-md-12">
