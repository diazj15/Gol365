<div class="row">
	<div class="col-md-8">
		<div class="row">
			<% if @news_main %>
				<div class="col-md-12">
					<div class="text-header">
						<% if params[:championship] %>
							Noticias del Campeonato de <%= params[:championship] %>
						<% else %>
							Noticias
						<% end %>
					</div>
				</div>
				<%
				# For every news
				@news_main.each do |news|  %>
					<div class="col-md-12">
						<div class="row">
							<div class="col-md-6">
								<div>
									<% begin %>
										<% if news.image_link_small.nil? || news.image_link_small.empty? %>
											<%= image_tag news.image.url(:medium), class: "img-responsive image-center" %>
										<% else %> 
											<%= news.image_link_small.html_safe %>										
										<% end %>
									<% rescue Exception %>
									<% end %>
								</div>
							</div>
							<div class="col-md-6">
								<div class="news-title"><%= link_to news.title, news_path(news, :championship => params[:championship]) %></div>
								<div class="news-subtitle"><%= local_time(news.updated_at) %></div>
								<div class="content-text"><%= simple_format(news.summary) %></div>
							</div>
						</div>
						<div><hr></div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>

	<div class="col-md-4">
		<div class="row">
			<% if @news_day_like_today %>

				<% @news_day_like_today.each do |news|  %>
					<div class="col-md-12 section-header-blue">Un d√≠a como hoy</div>
