<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %> 
  <%= f.input :title, required: true, label: false, placeholder: "Titulo", input_html: {class: "form-control", rows: 1} %><br>
  <%= f.label :category, 'Categoria' %>
  <%= f.input :category, required: true, label: false, placeholder: "Categoria", input_html: {class: "form-control"}, :collection => ['Main', 'Secondary', 'A day like today','Know better to','3 things we learned','Player of the week', 'Next Games', 'Team Positions', 'Top Scorers'] %><br>
  <%= f.label :championship, 'Campeonato' %>
  <%= f.input :championship, required: true, label: false, placeholder: "Campeonato", input_html: {class: "form-control"}, :collection => ['Mexico','Costa Rica','Brazil','EspaÃ±a','Inglaterra','Champions League'] %><br>
  <%= f.label :summary, 'Resumen' %>
  <%= f.cktext_area :summary, :ckeditor => {:language => 'es'} %><br>
  <%=  f.label :body, 'Noticia' %>
  <%=  f.cktext_area :body, :ckeditor => {:language => 'es'} %><br>

  <%= f.input :image_link_small, required: false, label: false, placeholder: "Link de Imagen", input_html: {class: "form-control", rows: 10} %><br>
